### ejemplo: Se estudia y: la tasa de respiracion
# bajo puntos de goteo con un recubrimiento galbanizado
# el agua que cae sobre el liquen contiene zinc y potasio,
# que utlizamos como variable explicativas
#fuente de datos wainwright (1993) j, biol, educ)

tasa.respiracion<-c(71,53,55,48,69,84,21,68,68)
potasio<-c(388,258,292,205,449,331,114,580,622)
zinc<-c(2414,10693,11682,12560,2464,2607,16205,2005,1825)
estudio<-data.frame(tasa.respiracion,potasio,zinc)
pairs(estudio)
cor(estudio)
regnull<-lm(tasa.respiracion~1,data = estudio)
allreg<-lm(tasa.respiracion~.,data = estudio)
step(regnull,scope = list(lower=regnull,upper=allreg),direction = "forward")

mod1<-lm(formula = tasa.respiracion ~ zinc, data = estudio)
summary(mod1)

##pruebas formales
shapiro.test(rstudent(mod1))

install.packages("lmtest")
require(lmtest)
bptest(mod1)

##independecian entre los residuos 
dwtest(mod1,alternative = "two.sided")


##cumple con todos los supuestos

#ecuacion del modelo
#y=79.48+(-0.0028552)x1 + e

#####interpretar el modelo
#en este caso podriamos decir que por cada unidad de zinc que aumenta
#disminuye en 0.0028552 la tasa de respiracion 

########################################################################
#-----------------ritmo cardicaco personas con diabetes-------------------
peso<-c(74,92,63,58,78,85,85,73,62,80,72,74)
altura<-c(168,196,170,175,162,169,190,186,176,170,176,179)
ritmo<-c(62,75,60,71,66,62,79,74,70,66,71,69)
edad<-c(25,31,29,64,44,41,37,35,34,29,19,50)
bs<-data.frame(ritmo,peso,altura,edad)
pairs(bs)
cor(bs)
regnull<-lm(ritmo~1,data = bs)
allreg<-lm(ritmo~.,data = bs)
step(regnull,scope = list(lower=regnull,upper=allreg),direction = "forward")

md1<-lm(formula = ritmo ~ altura, data = bs)

summary(md1)

shapiro.test(rstudent(md1))
#p-value = 0.9465

require(lmtest)
bptest(md1)
#p-value = 0.4444

dwtest(md1,alternative = "two.sided")
#p-value = 0.8995

summary(md1)
#ecuacion del modelo
#y=-17.1479 +(0.4869)x1 + e

###por cada unidad que aumenta de altura aumentara 0.4869 la variable de ritmo

#-----------------biodiversidad-------------------
#fuente: INEGI BODIVERSIDAD 2015 Y BANCO MUNDIAL
#P.E:peligro extincion
#p.t: poblacion total 2015

pais<-c("ARGENTINA","BOLIVIA", "BRASIL", "CANADA","CHILE", "COLOMBIA", "COSTA RICA",
        "ECUADOR","EL SALVADOR", "EUA", "GUATEMALA", "MEXICO", "PANAMA","PARAGUAY",
        "PERU", "REPUBLICA DOMINICANA","TRINIDAD Y TOBAGO", "URUGUAY","VENEZUELA")
P.E.<-c(19,16,73,9,22,86,30,82,4,211,37,192,32,4,45,19,8,8,32)
E.A<-c(180,117,451,99,119,511,194,464,58,1029,189,749,171,40,326,111,66,84,233)
P.T<-c(43847430,10887882,206101000,36229000,17909754,48653419,4909000,16529000,6344722,
       323127513,16582469,127540423,4034119,6725308,31481000,10075000,1367000,3444006,
       31568179)
bs1<-data.frame(pais,P.E.,E.A,P.T)
bs1$pais<-NULL
bs1
pairs(bs1)
cor(bs1)
rgnull<-lm(E.A~1,data = bs1)
allrg<-lm(E.A~.,data = bs1)
step(rgnull,scope = list(lower=rgnull,upper=allrg),direction = "forward")

modelo<-lm(formula = E.A ~ P.E. + P.T, data = bs1)

summary(modelo)

shapiro.test(rstudent(modelo))
#p-value = 0.004605

require(lmtest)
bptest(modelo)
#p-value = 0.002088

dwtest(modelo,alternative = "two.sided")
#p-value = 0.7641

summary(modelo)       

### no cumple con los supuestos
